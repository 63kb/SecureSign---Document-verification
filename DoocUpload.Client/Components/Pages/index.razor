@page "/"
@using DoocUpload.Client.Components.Layout
@layout MainLayout

<div class="hero-section">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">The ultimate solution for <span class="text-primary">secure document verification</span></h1>
                <p class="lead mb-4">Upload, scan, and verify your important documents with ease. Try it today!</p>
                <div class="d-flex gap-3">
                    <a href="/register" class="btn btn-primary btn-lg px-4">
                        <i class="fas fa-rocket me-2"></i>Get Started
                    </a>
                    <a href="#features" class="btn btn-outline-secondary btn-lg px-4">
                        <i class="fas fa-info-circle me-2"></i>Learn More
                    </a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <img src="/images/document-verification.svg" alt="Document Verification" class="img-fluid" />
            </div>
        </div>
    </div>
</div>

<section class="py-5 bg-white" id="features">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Why Choose DocVerify?</h2>
            <p class="text-muted lead">Powerful features to protect your documents</p>
        </div>

        <div class="row g-4">
            <div class="col-md-4">
                <div class="text-center p-4">
                    <div class="feature-icon">
                        <i class="fas fa-lock"></i>
                    </div>
                    <h3>Secure Upload</h3>
                    <p class="text-muted">Military-grade encryption for all your document uploads and transfers.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="text-center p-4">
                    <div class="feature-icon">
                        <i class="fas fa-check-circle"></i>
                    </div>
                    <h3>Instant Verification</h3>
                    <p class="text-muted">Quickly verify the authenticity of any document with our advanced algorithms.</p>
                </div>
            </div>

            <div class="col-md-4">
                <div class="text-center p-4">
                    <div class="feature-icon">
                        <i class="fas fa-signature"></i>
                    </div>
                    <h3>Digital Signatures</h3>
                    <p class="text-muted">Sign documents electronically with legally binding digital signatures.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 order-lg-2">
                <h2 class="fw-bold mb-4">How It Works</h2>
                <div class="d-flex mb-4">
                    <div class="me-4">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">1</div>
                    </div>
                    <div>
                        <h4>Upload Your Document</h4>
                        <p class="text-muted">Simply drag and drop or select your document to upload.</p>
                    </div>
                </div>
                <div class="d-flex mb-4">
                    <div class="me-4">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">2</div>
                    </div>
                    <div>
                        <h4>Verification Process</h4>
                        <p class="text-muted">Our system automatically scans and verifies your document.</p>
                    </div>
                </div>
                <div class="d-flex">
                    <div class="me-4">
                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">3</div>
                    </div>
                    <div>
                        <h4>Get Results</h4>
                        <p class="text-muted">Receive instant verification results and optional digital signing.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 order-lg-1">
                <img src="/images/workflow.svg" alt="Workflow" class="img-fluid" />
            </div>
        </div>
    </div>
</section>

<section class="py-5 bg-white">
    <div class="container text-center">
        <h2 class="fw-bold mb-4">Ready to Get Started?</h2>
        <p class="lead mb-5">Join thousands of users who trust DocVerify for their document security needs.</p>
        <a href="/register" class="btn btn-primary btn-lg px-5 py-3">
            <i class="fas fa-user-plus me-2"></i>Create Free Account
        </a>
    </div>
</section>