@inject NavigationManager Navigation

<div class="main-container">
    <div class="card">
        <h1 style="color: var(--google-dark-gray); margin-bottom: 20px;">Welcome to File Upload</h1>
        <p style="color: var(--google-dark-gray); margin-bottom: 30px; font-size: 16px;">
            Navigate to the Upload page to submit your files.
        </p>

        <button class="btn-google" @onclick="NavigateToUpload">
            <span style="display: inline-flex; align-items: center; gap: 8px;">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="white">
                    <path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z" />
                </svg>
                Go to Upload
            </span>
        </button>
    </div>
</div>

@code {
    private void NavigateToUpload()
    {
        Navigation.NavigateTo("/upload");
    }
}