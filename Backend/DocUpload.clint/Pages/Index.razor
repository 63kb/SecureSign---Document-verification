@page "/"

<div class="hero-section">
    <div class="container py-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold mb-4">The ultimate solution for <span style="color: var(--primary)">secure document verification</span></h1>
                <p class="lead mb-4">Upload, scan, and verify your important documents with ease. Try it today!</p>
                <div class="d-flex gap-3">
                    <a href="/register" class="btn btn-primary btn-lg px-4">
                        <i class="fas fa-rocket me-2"></i>Get Started
                    </a>
                    <a href="#features" class="btn btn-outline-secondary btn-lg px-4">
